<section class="section">
    <div class="container">
        <h1 class="title">Contáctanos</h1>
        <form action="/contacto" method="POST">
            <div class="field">
                <label for="name">Nombre</label>
                <div class="control">
                    <input type="text" name="name" class="input" placeholder="Tu nombre" required autofocus>
                </div>              

            <div class="field">
                <label for="email">Correo Electrónico</label>
                <div class="control">
                    <input type="email" name="email" class="input" placeholder="example@mail.com" required>
                </div>              
            </div>

            <div class="field">
                <label for="message">Correo Electrónico</label>
                <div class="control">
                    <textarea class="textarea" name="message" id="message" placeholder="Escribe tu mensaje"></textarea>
                </div>              
            </div>

            <div class="field">
                <div class="control">
                   <button class="button is-link" type="submit">Enviar mensaje</button>
                </div>              
            </div>
            

            </div>
        </form>
    </div>
</section>

